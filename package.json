{
  "name": "SpendES-backend",
  "version": "0.0.1",
  "main": "dist/main/server.js",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "build:watch": "npm run build -- --watch",
    "start": "node dist/main/server.js",
    "dev": "nodemon -L --watch ./dist ./dist/main/server.js",
    "start:dev": "concurrently --kill-others-on-fail \"npm run build:watch\" \"npm run start\" ",
    "test": "jest --passWithNoTests --runInBand --no-cache",
    "test:staged": "npm run test -- --findRelatedTests",
    "test:ci": "npm run test -- --coverage",
    "lint": "eslint --ignore-pattern .gitignore . --fix",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "Uttam Makwana",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/js": "^9.17.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "eslint": "^9.17.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.11",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.1"
  },
  "_moduleAliases": {
    "@domain": "dist/domain",
    "@application": "dist/application",
    "@infrastructure": "dist/infrastructure",
    "@main": "dist/main"
  },
  "dependencies": {
    "module-alias": "^2.2.3"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "npm run test:staged"
    ]
  }
}
